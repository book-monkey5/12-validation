import { FormArray, ValidatorFn } from '@angular/forms';

export const atLeastOneValue: ValidatorFn = function(control) {
  if (!(control instanceof FormArray)) {
    return null;
  }

  if (control.controls.some(el => !!el.value)) {
    return null;
  } else {
    return { atleastonevalue: true };
  }
}
